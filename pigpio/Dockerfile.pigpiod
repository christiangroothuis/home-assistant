FROM python:3.14-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    git build-essential python3-dev \
    && git clone --depth=1 https://github.com/joan2937/pigpio.git /tmp/pigpio \
    && pip install --no-cache-dir setuptools \
    && cd /tmp/pigpio && make && make install \
    && apt-get purge -y --auto-remove build-essential git python3-dev \
    && rm -rf /var/lib/apt/lists/* /tmp/pigpio

EXPOSE 8888

CMD ["pigpiod", "-g", "-a", "0", "-f"]